= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :price
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn'
