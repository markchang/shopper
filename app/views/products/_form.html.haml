= simple_form_for @product, :html => { :class => 'form-vertical' } do |f|
  = f.input :title, :label => 'Title', :input_html => {:class => 'span5'}
  = f.input :price, :label => 'Price, whole dollars only'
  = f.input :description, :input_html => {:rows => 5, :class => 'span5'}
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    %br
    = link_to 'Cancel', products_path
